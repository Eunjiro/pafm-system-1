# PAFM System - Environment Variables
# Copy this file to .env and fill in your actual values

# Database
POSTGRES_USER=pafm_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=pafm_db

# JWT Secret
JWT_SECRET=your-jwt-secret-here

# NextAuth
NEXTAUTH_URL=http://your-droplet-ip:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth (Get from: https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Service URLs
NEXT_PUBLIC_API_URL=http://your-droplet-ip:3001
NEXT_PUBLIC_ASSET_API_URL=http://your-droplet-ip:3003
NEXT_PUBLIC_FACILITY_API_URL=http://your-droplet-ip:3005
NEXT_PUBLIC_PARKS_API_URL=http://your-droplet-ip:3004
NEXT_PUBLIC_WATER_API_URL=http://your-droplet-ip:3006
